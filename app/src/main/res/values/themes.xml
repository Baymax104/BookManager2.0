<resources>
    <!-- Base application theme. -->
    <style name="Theme.BookManager20" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color_variant</item>
        <item name="colorSecondaryVariant">@color/main_color_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bar_color</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_color</item>
        <item name="colorControlHighlight">@color/main_color</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogTitleTextStyle" parent="DialogButtonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TextInputLayout输入框样式-->
    <style name="TextInputEditStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="BottomDialogBgStyle">
        <item name="bl_solid_color">@color/white</item>
        <item name="bl_corners_topRadius">15dp</item>
    </style>

    <style name="BookInfoTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>