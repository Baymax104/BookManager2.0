<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="book"
                type="com.baymax104.bookmanager20.entity.Book" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:bl_solid_color="@color/white"
            app:bl_corners_topLeftRadius="15dp"
            app:bl_corners_topRightRadius="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_book_info"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        <FrameLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:elevation="3dp"
                app:bl_corners_radius="10dp"
                app:bl_solid_color="@color/bar_color"
                android:id="@+id/take_photo"
                tools:ignore="ContentDescription">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/camera" />
        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp"
                android:hint="@string/input_name_hint"
                style="@style/TextInputEditStyle">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:id="@+id/name_edit"
                    android:textColor="@color/black"
                    android:text="@={book.name}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/input_author_hint"
                style="@style/TextInputEditStyle">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:id="@+id/author_edit"
                    android:textColor="@color/black"
                    android:text="@={book.author}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="20dp"
                android:hint="@string/input_page_hint"
                style="@style/TextInputEditStyle">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:id="@+id/page_edit"
                    android:textColor="@color/black"
                    android:afterTextChanged="@{s->book.setPage(Integer.parseInt(s.toString()))}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/separator_color" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/cancel"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:background="?attr/selectableItemBackground" />

            <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/separator"
                    android:background="@color/separator_color" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/confirm"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/black"
                    android:background="?attr/selectableItemBackground" />

        </LinearLayout>
    </LinearLayout>
</layout>