<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="book"
                type="com.baymax104.bookmanager20.entity.Book" />
        <import type="android.view.View.OnClickListener"/>
        <variable
                name="confirm"
                type="OnClickListener" />
        <variable
                name="cancel"
                type="OnClickListener" />
        <import type="android.widget.ImageView.ScaleType"/>
        <variable
                name="modify"
                type="OnClickListener" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/BottomDialogBgStyle"
            tools:ignore="ContentDescription">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_info_title"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                style="@style/DialogTitleTextStyle"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/book_cover"
                android:layout_gravity="center_horizontal"
                book_photo="@{book.photo}"
                book_photo_scaleType="@{ScaleType.FIT_CENTER}"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="10dp"
                app:bl_stroke_width="0.8dp"
                app:bl_stroke_color="@color/border_color"
                app:bl_corners_radius="15dp"
                app:bl_solid_color="@color/bar_color"
                android:onClick="@{modify}">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="@{`书名：` + book.name}"
                    style="@style/BookInfoTextStyle"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:text="@{`作者：` + book.author}"
                    style="@style/BookInfoTextStyle"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:text="@{`出版社：` + book.publisher}"
                    style="@style/BookInfoTextStyle"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:text="@{String.format(`页数：%d页`, book.page)}"
                    style="@style/BookInfoTextStyle"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"
                    android:text="@{`ISBN：` + book.isbn}"
                    style="@style/BookInfoTextStyle"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:text="@{`图书介绍：` + book.description}"
                    style="@style/BookInfoTextStyle"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/modify_info_tip"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:gravity="center" />

        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/separator_color" />

        <include
                layout="@layout/layout_dialog_button"
                bind:confirm="@{confirm}"
                bind:cancel="@{cancel}"/>
    </LinearLayout>

</layout>