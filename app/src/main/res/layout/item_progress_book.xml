<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="book"
                type="com.baymax104.bookmanager20.entity.Book" />
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="7dp"
            app:cardElevation="5dp"
            tools:ignore="RelativeOverlap,ContentDescription">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="6dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:layout_gravity="start|center_vertical"
                        android:maxLines="1"
                        android:text="@{book.name ?? `未添加书名`}"
                        android:ellipsize="end" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:maxEms="10"
                            android:text="@{book.author ?? `佚名`}"
                            android:ellipsize="end" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/gray"
                            book_date="@{book.startTime}" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:orientation="horizontal">

                <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="9"
                        android:layout_gravity="start|center_vertical"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/layer_progress_bar"
                        android:max="100"
                        book_progress="@{book}" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:layout_marginStart="7dp"
                        android:gravity="center"
                        android:text="@{book.progress + `/` + book.page}"
                        android:textSize="13sp"
                        android:textColor="@color/gray" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>