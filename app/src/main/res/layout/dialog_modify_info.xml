<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.InputType"/>
        <variable
                name="book"
                type="com.baymax104.bookmanager20.entity.Book" />
        <import type="android.view.View.OnClickListener"/>
        <variable
                name="confirm"
                type="OnClickListener" />
        <variable
                name="cancel"
                type="OnClickListener" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/BottomDialogBgStyle">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_change"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                style="@style/DialogTitleTextStyle" />

        <include
                layout="@layout/layout_edit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp"
                bind:hint="@{@string/book_name}"
                bind:inputType="@{InputType.TYPE_CLASS_TEXT}"
                bind:text="@{book.name}"
                bind:handler="@{s->book.setName(s.toString())}"/>

        <include
                layout="@layout/layout_edit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="10dp"
                bind:hint="@{@string/book_author}"
                bind:inputType="@{InputType.TYPE_CLASS_TEXT}"
                bind:text="@{book.author}"
                bind:handler="@{s->book.setAuthor(s.toString())}"/>

        <include
                layout="@layout/layout_edit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="20dp"
                bind:hint="@{@string/book_page}"
                bind:inputType="@{InputType.TYPE_CLASS_NUMBER}"
                bind:text="@{book.page != 0 ? String.valueOf(book.page) : ``}"
                bind:handler="@{s->book.setPage(!s.toString().equals(``) ? Integer.parseInt(s.toString()) : 0)}"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/separator_color" />

        <include
                layout="@layout/layout_dialog_button"
                bind:confirm="@{confirm}"
                bind:cancel="@{cancel}"/>

    </LinearLayout>

</layout>